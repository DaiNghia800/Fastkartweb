@model List<Fastkart.Models.Entities.Pages>

@{
    Layout = "_LayoutAdmin";
    ViewData["title"] = "List Page";
}

<section class="list-page-area">
    <div class="card card-table">
        <div class="header-title">
            <h5>List Page</h5>
            <a href="/admin/list-page/create" class="btn btn-primary" style="margin-left: auto;">
                <i class="fa fa-plus"></i> Add New Page
            </a>
        </div>
        <div class="table-responsive">
            <div class="table-search">
                <label>
                    Search
                    <input type="text" name="name" value="" />
                </label>
            </div>
            <table class="table theme-table mb-0">
                <thead>
                    <tr>
                        <th>
                            <input class="form-check-input" type="checkbox" value="">
                        </th>
                        <th class="text-start">Title</th>
                        <th class="text-start">Author</th>
                        <th class="text-start">Date</th>
                        <th>Options</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input class="form-check-input" type="checkbox" value="@item.Uid">
                                </td>
                                <td class="text-start">
                                    <i class="fa-solid fa-blog me-2"></i> @item.Title
                                </td>

                                <td class="text-start">
                                    @(item.Author != null ? item.Author.FullName : "N/A")
                                </td>

                                <td class="text-start">
                                    <span>@item.Status</span>
                                    <small class="d-block text-muted">
                                        @item.CreatedAt.ToString("dd-MM-yyyy 'at' h:mm tt")
                                    </small>
                                </td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="/admin/list-page/edit/@item.Uid" class="icon-edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M15.7279 9.57627L14.3137 8.16206L5 17.4758V18.89H6.41421L15.7279 9.57627ZM17.1421 8.16206L18.5563 6.74785L17.1421 5.33363L15.7279 6.74785L17.1421 8.16206ZM7.24264 20.89H3V16.6473L16.435 3.21231C16.8256 2.82179 17.4587 2.82179 17.8492 3.21231L20.6777 6.04074C21.0682 6.43126 21.0682 7.06443 20.6777 7.45495L7.24264 20.89Z"></path></svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/admin/list-page/delete/@item.Uid" class="icon-delete" onclick="return confirm('Bạn có chắc muốn xóa page này?')">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M7 4V2H17V4H22V6H20V21C20 21.5523 19.5523 22 19 22H5C4.44772 22 4 21.5523 4 21V6H2V4H7ZM6 6V20H18V6H6ZM9 9H11V17H9V9ZM13 9H15V17H13V9Z"></path></svg>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Chưa có dữ liệu. <a href="/admin/list-page/create">Thêm page mới</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>