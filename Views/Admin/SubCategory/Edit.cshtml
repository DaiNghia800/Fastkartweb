@using Fastkart.Models.Entities;
@model ProductSubCategory;
@{
    Layout = "_LayoutAdmin";
    ViewData["title"] = "Edit SubCategory";
    var subCategory = ViewBag.productSubCategory as ProductSubCategory;
}

<section class="product-category-create">
    <form action="/admin/sub-category/edit/@subCategory.Uid" method="post" class="theme-form theme-form-2">
        <div class="row">
            <div class="col-8 mx-auto">
                <div class="card">
                    <div class="card-header2">
                        <h5>SubCategory Information</h5>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="name" class="col-3 form-label-title">SubCategory Name</label>
                        <div class="col-9">
                            <input class="form-control" type="text" asp-for="SubCategoryName" id="name" value="@subCategory.SubCategoryName" placeholder="SubCategory Name" />
                            <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="category" class="col-3 form-label-title">Category</label>
                        <div class="col-9">
                            <select id="category" class="js-example-basic-single w-100" name="CategoryUid">
                                @{
                                    if (ViewData["productCategories"] != null)
                                    {
                                        foreach (var productCategory in ViewBag.productCategories)
                                        {
                                            <option value="@productCategory.Uid" selected=@(subCategory.CategoryUid == productCategory.Uid ? true : false)>@productCategory.CategoryName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="status" class="col-3 form-label-title">Status</label>
                        <div class="col-9">
                            <div class="radio-section">
                                <label>
                                    <input type="radio" name="Status" value="Active" @(subCategory.Status == "Active" ? "checked" : "")>
                                    <i></i>
                                    <span>Active</span>
                                </label>
                                <label>
                                    <input type="radio" name="Status" value="Inactive" @(subCategory.Status == "Inactive" ? "checked" : "")>
                                    <i></i>
                                    <span>Inactive</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4 align-items-start">
                        <label for="desc" class="col-3 form-label-title">Description</label>
                        <div class="col-9">
                            <textarea id="editor" name="Description">@subCategory.Description</textarea>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mb-3">
                    <button type="submit" class="btn text-white theme-bg-color ms-auto" button-save>Add SubCategory</button>
                </div>
            </div>
        </div>
    </form>
</section>