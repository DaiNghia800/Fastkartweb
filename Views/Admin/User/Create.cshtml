@{
    Layout = "_LayoutAdmin";
    ViewData["title"] = "Create User";
}

<section class="product-create">
    <form action="/" method="post" class="theme-form theme-form-2">
        <div class="row">
            <div class="col-8 mx-auto">
                <div class="card">
                    <div class="card-header2">
                        <h5>Add New User</h5>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="name" class="col-3 form-label-title">First Name</label>
                        <div class="col-9">
                            <input class="form-control" type="text" name="name" value="" id="name" />
                        </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="email" class="col-3 form-label-title">Email Address</label>
                        <div class="col-9">
                            <input class="form-control" type="text" name="email" value="" id="email" />
                        </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="password" class="col-3 form-label-title">Password</label>
                        <div class="col-9">
                            <input class="form-control" type="text" name="password" value="" id="password"/>
                        </div>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <label for="role" class="col-3 form-label-title">Role</label>
                        <div class="col-9">
                            <select id="role" class="js-example-basic-single w-100">
                                <option disabled value="">Static Menu</option>
                                <option value="">Simple</option>
                                <option value="">Classified</option>
                            </select>
                        </div>
                    </div>
                <div class="d-flex justify-content-end mb-3">
                    <button type="submit" class="btn text-white theme-bg-color ms-auto">Add Product</button>
                </div>
            </div>
        </div>
    </form>

</section>
