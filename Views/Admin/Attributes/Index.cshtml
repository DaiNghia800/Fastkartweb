@{
    Layout = "_LayoutAdmin";
    ViewData["title"] = "Attributes";
}

<section class="product-area">
    <div class="card card-table">
        <div class="header-title">
            <h5>All Category</h5>
            <div class="options">
                <ul>
                    <li>
                        <a href="/admin/product-category/create" class="btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
                            Add New
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="table-responsive">
            <div class="table-search">
                <label>
                    Search
                    <input type="text" name="name" value="" />
                </label>
            </div>
            <table class="table theme-table mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        for (int i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>Color</td>
                                <td>Blue, Red, White</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="#" class="icon-edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M15.7279 9.57627L14.3137 8.16206L5 17.4758V18.89H6.41421L15.7279 9.57627ZM17.1421 8.16206L18.5563 6.74785L17.1421 5.33363L15.7279 6.74785L17.1421 8.16206ZM7.24264 20.89H3V16.6473L16.435 3.21231C16.8256 2.82179 17.4587 2.82179 17.8492 3.21231L20.6777 6.04074C21.0682 6.43126 21.0682 7.06443 20.6777 7.45495L7.24264 20.89Z"></path></svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="icon-delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M7 4V2H17V4H22V6H20V21C20 21.5523 19.5523 22 19 22H5C4.44772 22 4 21.5523 4 21V6H2V4H7ZM6 6V20H18V6H6ZM9 9H11V17H9V9ZM13 9H15V17H13V9Z"></path></svg>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
