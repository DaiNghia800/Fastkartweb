@model List<Fastkart.Models.Entities.CartItemViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cart";
    long subtotal = (long)(ViewBag.Subtotal ?? 0L);
    long shippingFee = 25000;
    long couponDiscount = 0;

    long grandTotal = subtotal + shippingFee - couponDiscount;
}

<section class="cart-section">
    <div class="container">
        <div class="row g-sm-5 g-3">
            <div class="col-xxl-9">
                <div class="cart-left">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-detail">
                                                <div class="product d-flex align-items-center">
                                                    <a href="#">
                                                        <img src="@item.Image" alt="@item.ProductName" class="img-fluid">
                                                    </a>
                                                    <div class="detail">
                                                        <ul>
                                                            <li class="name">
                                                                <a href="#">@item.ProductName</a>
                                                            </li>
                                                            <li class="text-content">
                                                                <span>Sold By:</span>
                                                                Fresho
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="price">
                                                <h4 class="table-title">Price</h4>
                                                <h5>@item.Price.ToString("N0") ₫</h5>
                                            </td>
                                            <td class="qty">
                                                <h4 class="table-title">Qty</h4>
                                                <div class="cart-qty">
                                                    <div class="input-group">
                                                        <button type="button" class="btn qty-left-minus" data-type="minus" data-field="">
                                                            <i class="fa fa-minus ms-0"></i>
                                                        </button>
                                                        <input class="form-control input-number qty-input" type="text" name="quantity" value="@item.Quantity" readonly>
                                                        <button type="button" class="btn qty-right-plus" data-type="plus" data-field="">
                                                            <i class="fa fa-plus ms-0"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="total">
                                                <h4 class="table-title">Total</h4>
                                                <h5>@item.Total.ToString("N0") ₫</h5>
                                            </td>
                                            <td class="action">
                                                <h4 class="table-title">Action</h4>
                                                <a href="#" class="save">Save for later</a>
                                                <a href="/cart/remove?productId=@item.ProductId" class="remove">Remove</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" style="text-align: center; padding: 30px;">
                                            <h4>Giỏ hàng của bạn đang trống.</h4>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xxl-3">
                <div class="cart-right">
                    <h3>Cart Total</h3>
                    <div class="cart-right-contain">
                        <div class="summery-contain">
                            <div class="coupon-cart">
                                <h6>Coupon Apply</h6>
                                <div class="coupon-box input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Enter Coupon Code Here...">
                                    <button class="btn-apply">Apply</button>
                                </div>
                            </div>
                            <ul>
                                <li>
                                    <h4>Subtotal</h4>
                                    <h4 class="price">@subtotal.ToString("N0") ₫</h4>
                                </li>
                                <li>
                                    <h4>Coupon Discount</h4>
                                    <h4 class="price">(-) @couponDiscount.ToString("N0") ₫</h4>
                                </li>
                                <li>
                                    <h4>Shipping</h4>
                                    <h4 class="price">@shippingFee.ToString("N0") ₫</h4>
                                </li>
                            </ul>
                        </div>
                        <div class="cart-right-total">
                            <h4>Total (VND)</h4>
                            <h4 class="price">@grandTotal.ToString("N0") ₫</h4>
                        </div>
                        <div class="button-group">
                            <div>
                                <a href="/checkout" class="btn fw-bold btn-animation w-100">Process To Checkout</a>
                            </div>
                            <div>
                                <a href="/" class="btn btn-light text-dark button-shopping">
                                    <i class="fa-solid fa-arrow-left-long me-2"></i>
                                    Return To Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>