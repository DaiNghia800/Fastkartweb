@{
    ViewData["Title"] = "Cảm ơn bạn đã đặt hàng";

    // --- DỮ LIỆU GIẢ ĐỊNH ---
    // (Sau này bạn sẽ thay bằng dữ liệu thật từ Controller)
    ViewBag.OrderId = "#12345-ABC";
    ViewBag.Subtotal = 900000;
    ViewBag.Discount = -200000;
    ViewBag.Shipping = 0;
    ViewBag.Total = 700000;

    var demoItems = new[] {
        new {
            Name = "Green Capsicum #1",
            Qty = 1,
            Price = 350000,
            Image = "https://themes.pixelstrap.com/fastkart/assets/images/product/category/1.jpg"
        },
        new {
            Name = "Organic Orange #2",
            Qty = 1,
            Price = 350000,
            Image = "https://themes.pixelstrap.com/fastkart/assets/images/product/category/4.jpg"
        }
    };
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style_thankyou.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <div class="ty-page-container">
        <div class="ty-email-wrapper">

            <header class="ty-header">
                Fastkart
            </header>

            <section class="ty-thankyou-block">
                <img src="https://themes.pixelstrap.com/fastkart/assets/images/vegetable/delivery.png" alt="Delivery Scooter">
                <h2>Cảm ơn bạn đã đặt hàng!</h2>
                <p>
                    Bạn sẽ nhận được email khi đơn hàng được vận chuyển.
                    Nếu có bất kỳ câu hỏi nào, hãy gọi chúng tôi theo số 1900-8888.
                </p>
            </section>

            <section class="ty-info-boxes">
                <div class="ty-info-box">
                    <h3>Địa chỉ giao hàng</h3>
                    <p>
                        268 Cambridge Lane New Albany,
                        IN 47150268 Cambridge Lane
                        New Albany, IN 47150
                    </p>
                </div>
                <div class="ty-info-box">
                    <h3>Chi tiết đơn hàng</h3>
                    <p>
                        Bạn sẽ nhận được email khi đơn hàng được vận chuyển.
                        Nếu có bất kỳ câu hỏi nào, hãy gọi chúng tôi theo số 1900-8888.
                    </p>
                </div>
            </section>

            <section class="ty-order-details">

                <div class="ty-shipped-items">
                    <h3>Các sản phẩm đã đặt</h3>
                    <ul>
                        @foreach (var item in demoItems)
                        {
                            <li class="ty-item">
                                <img src="@item.Image" alt="@item.Name">
                                <div class="ty-item-info">
                                    <strong>@item.Name</strong>
                                    <span>SL: @item.Qty</span>
                                </div>
                                <span class="ty-item-price">@item.Price.ToString("N0") ₫</span>
                            </li>
                        }
                    </ul>
                </div>

                <div class="ty-order-summary">
                    <h3>Tóm tắt đơn hàng</h3>
                    <div class="ty-summary-details">
                        <div>
                            <span>Tạm tính</span>
                            <span>@ViewBag.Subtotal.ToString("N0") ₫</span>
                        </div>
                        <div>
                            <span>Giảm giá</span>
                            <span>@ViewBag.Discount.ToString("N0") ₫</span>
                        </div>
                        <div>
                            <span>Vận chuyển</span>
                            <span>@ViewBag.Shipping.ToString("N0") ₫</span>
                        </div>
                        <div class="ty-summary-total">
                            <span>Tổng cộng</span>
                            <span>@ViewBag.Total.ToString("N0") ₫</span>
                        </div>
                    </div>
                </div>
            </section>

            <section class="ty-promo-banner">
                <h3>Nhận ngay 25% cho đơn hàng tiếp theo</h3>
                <a href="#" class="ty-promo-btn">Awesome</a>
            </section>

            <footer class="ty-footer">
                <h4>Shop For Fastkart</h4>
                <div class="ty-footer-links">
                    <a href="#">Contact Us</a>
                    <a href="#">Unsubscribe</a>
                    <a href="#">Privacy Policy</a>
                </div>
                <div class="ty-social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest-p"></i></a>
                </div>
                <p class="ty-copyright">
                    WANT TO CHANGE HOW YOU RECEIVE THESE EMAILS?<br>
                    2021-22 COPY RIGHT BY THEMEFOREST POWERD BY PIXELSTRAP
                </p>
            </footer>

        </div>
    </div>

</body>
</html>