@model Fastkart.Models.ViewModels.RegisterViewModel
@using Microsoft.AspNetCore.Authentication.Google
@using Microsoft.AspNetCore.Authentication.Facebook
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sign Up";
}
<section class="log-in-section background-image-2 section-b-space">
    <div class="container w-100">
        <div class="row">
            <div class="col-xxl-6 col-xl-5 col-lg-6 d-lg-block d-none ms-auto">
                <div class="image-contain">
                    <img src="~/images/sign-up.png" class="img-fluid" alt="">
                </div>
            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-6 col-sm-8 mx-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>Welcome To Fastkart</h3>
                        <h4>Create New Account</h4>
                    </div>

                    @* Hiển thị validation summary *@
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="input-box">
                        <form class="row g-4" id="signup_form" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="col-12">
                                <div class="form-floating theme-form-floating">
                                    <input type="text"
                                           class="form-control"
                                           asp-for="FullName"
                                           placeholder="Full Name"
                                           required
                                           data-msg-required="Please enter your full name">
                                    <label asp-for="FullName">Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating theme-form-floating">
                                    <input type="email"
                                           class="form-control"
                                           asp-for="Email"
                                           placeholder="Email Address"
                                           required
                                           data-msg-required="Please enter your email"
                                           data-msg-email="Invalid email format">
                                    <label asp-for="Email">Email Address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating theme-form-floating">
                                    <input type="password"
                                           class="form-control"
                                           asp-for="Password"
                                           placeholder="Password"
                                           required
                                           data-msg-required="Please enter a password"
                                           minlength="6">
                                    <label asp-for="Password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating theme-form-floating">
                                    <input type="password"
                                           class="form-control"
                                           asp-for="ConfirmPassword"
                                           placeholder="Confirm Password"
                                           required
                                           data-msg-required="Please confirm your password"
                                           data-rule-equalTo="input[name='Password']"
                                           data-msg-equalTo="Password confirmation does not match">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn-1 btn-animation hp w-100 justify-content-center" type="submit">
                                    Sign Up
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="other-log-in">
                        <h6>or</h6>
                    </div>

                    <div class="log-in-button">
                        <ul>
                            <li>
                                <a href="#" id="google-signup-button" class="btn google-button w-100">
                                    <img src="@Url.Content("~/images/google.png")" alt=""> Sign up with Google
                                </a>
                            </li>
                            <li>
                                <a href="#" id="facebook-signup-button" class="btn google-button w-100">
                                    <img src="@Url.Content("~/images/facebook.png")" alt=""> Sign up with Facebook
                                </a>
                            </li>
                        </ul>
                    </div>
                    <form id="google-signup-form" asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: none;">
                        <input name="provider" value="@GoogleDefaults.AuthenticationScheme" />
                    </form>
                    <form id="facebook-signup-form" asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: none;">
                        <input name="provider" value="@FacebookDefaults.AuthenticationScheme" />
                    </form>

                    <div class="other-log-in">
                        <h6></h6>
                    </div>

                    <div class="sign-up-box">
                        <h4>Already have an account?</h4>
                        <a href="/login">Log In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>